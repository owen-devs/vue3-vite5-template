{
    "extends": "@tsconfig/node20/tsconfig.json",
    "include": [
        "vitePlugins/*",
        "vite.config.*",
        "vitest.config.*",
        "cypress.config.*",
        "nightwatch.conf.*",
        "playwright.config.*",
        "src/**/*.vue",
        "src/**/*.json",
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node"],
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
